{
  "private": true,
  "name": "tbd-name",
  "license": "MIT",
  "author": "Vikram Rangaraj <vik120@icloud.com> (https://github.com/vikr01)",
  "repository": "https://github.com/vikr01/cs160-project.git",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "precommit": "lint-staged",
    "heroku-postbuild": "yarn run build",
    "start": "yarn workspace tbd-backend-name start"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-flow-comments": "^7.0.0",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0",
    "@babel/plugin-transform-react-inline-elements": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-babel": "^5.2.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-security": "^1.4.0",
    "flow-bin": "^0.80.0",
    "flow-typed": "^2.5.1",
    "husky": "^0.14.3",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "prettier-package-json": "^2.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "yarn": "^1.9.4"
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "eslint --fix",
        "prettier --ignore-path .eslintignore --write",
        "git add"
      ],
      "{*.json,.{babelrc,eslintrc,prettierrc,stylelintrc}}": [
        "prettier --ignore-path .eslintignore --write",
        "git add"
      ],
      "*.{css,scss}": [
        "stylelint --ignore-path .eslintignore --syntax scss --fix",
        "prettier --ignore-path .eslintignore --write",
        "git add"
      ],
      "*.{yml,less,md}": [
        "prettier --ignore-path .eslintignore --write",
        "git add"
      ],
      "package.json": [
        "prettier-package-json --write",
        "git add"
      ]
    }
  }
}
